<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contenedorDetalleActividad">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/contentButtons"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnDetalleActividadesDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvDetalleActividadesDescripcion"/>

        <Button
            android:id="@+id/btnDetalleHorarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvDetalleHorarios" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragment_descripcion"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>
</LinearLayout>