<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/loading_img"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/ivActividad"
        android:layout_alignStart="@+id/ivActividad" />

    <ImageView
        android:id="@+id/ivActividad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/ivImagenActividad"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvNombreActividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvNombreActividad"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

</LinearLayout>